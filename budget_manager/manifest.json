{
    "manifest_version": 2,
    "name":"Budget Manager",
    "description": "This extension tracks the overall spending.",
    "version":"1.0",
    "icons":{
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "16": "images/icon16.png"
    },
    "browser_action":{
        "default_icon": "images/icon16.png",
        "default_popup": "popup.html"
    },
    "permissions":["storage",
        "notifications",
        "contextMenus"],
    "options_page": "options.html",
    "background" : {
        "scripts":  ["eventPage.js"],
        "persistent": false  // for event page, "persistent"is  false
    }
}